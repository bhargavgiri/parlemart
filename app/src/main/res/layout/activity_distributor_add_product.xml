<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".Distributor_View.Distributor_add_product">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar11"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tool_bar_style"
        android:elevation="4dp"
        android:paddingStart="25dp"
        android:paddingLeft="25dp"
        app:title="Parle Mart"
        app:titleMarginTop="10dp"
        app:titleTextColor="#fff"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:layout_below="@id/toolbar11"  >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:id="@+id/C_view"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FFFF"
        app:cardElevation="50dp"
        app:cardPreventCornerOverlap="false"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="30dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:id="@+id/P_image"
            android:background="@drawable/custom_input_file"
            />
    </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/C_view"
                android:text="Above Set Product Image!"
                android:textSize="15dp"
                android:textColor="#F60F0F"
                android:id="@+id/T1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/P_name"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/T1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/custom_input_file"
                android:drawableStart="@drawable/catume_shope_name"
                android:drawableLeft="@drawable/ic_baseline_shopename"
                android:drawablePadding="12dp"
                android:hint="Product Name"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#0E0101"
                android:textColorHint="#AAAAAA"/>
            <EditText
                android:id="@+id/P_Box"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/P_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/custom_input_file"
                android:drawableStart="@drawable/catume_shope_name"
                android:drawableLeft="@drawable/ic_baseline_add_fd"
                android:drawablePadding="12dp"
                android:hint="Box,Quality"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#0E0101"
                android:textColorHint="#AAAAAA"/>
            <EditText
                android:id="@+id/P_price"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/P_Box"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/custom_input_file"
                android:drawableStart="@drawable/catume_shope_name"
                android:drawableLeft="@drawable/ic_baseline_shopename"
                android:drawablePadding="12dp"
                android:hint="Product Price EX:5,10,50"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#0E0101"
                android:textColorHint="#AAAAAA"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="65dp"
                android:text="Add product"
                android:layout_marginBottom="50dp"
                android:textAllCaps="false"
                android:id="@+id/Add_product"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/P_price"
                android:background="@drawable/custom_input_file"
                android:layout_marginLeft="15dp"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="65dp"
                android:text="Submit"
                android:layout_marginBottom="50dp"
                android:textAllCaps="false"
                android:id="@+id/P_Submit"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/P_price"
                android:background="@drawable/custom_input_file"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>